DEVENV db-test
  COMPOSE
    version: "3"
    services:
      db:
        image: nginx:alpine

DEVENV other-test
  COMPOSE
    version: "3"
    services:
      db:
        image: nginx:alpine

ARTEFACT dev
  STEP env1
    DEVENV db-test
    COMMAND echo "env1"
  STEP env2
    DEVENV other-test
    COMMAND echo "env2"

ARTEFACT test
  STEP test
    DEVENV db-test
    COMMAND go test ./...

ARTEFACT mudly
  DEPENDS ON +test
  STEP build
    COMMAND go build -o=bin/mudly -v ./cmd/mudly
  STEP link
    CONDITION [[ ! -f /usr/local/bin/mudly ]]
    COMMAND
      rm -rf /usr/local/bin/mudly
      ln -s $(pwd)/bin/mudly /usr/local/bin/mudly
